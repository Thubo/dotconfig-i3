# Hide borders at the edge of the screen
hide_edge_borders vertical

new_window 1pixel
new_float 1pixel

# Set modifier to win key
set $mod Mod4

# Set modifier to alt key
# set $mod Mod1

# Execute commands at startup
# Requires
#  * dropbox
#  * imagemagick
#  * nm-applet
#  * numlockx
#  * owncloud
#  * parcellite
#  * rofi
#  * scrot
#  * xautolock
# --------------------------------------------------------------------------- #
# Put the screens where they belong
exec_always --no-startup-id ~/.i3/xrandr.sh
# Start rofi
# Switch between modi: Shift-Right
exec_always --no-startup-id pkill rofi; rofi -key-ssh alt-shift-space -key-window alt-Tab
# Set Background to black
exec_always --no-startup-id xsetroot -solid "#000000"
# Set Keyboard to us and bind esc to caps
exec_always --no-startup-id sleep 5s && setxkbmap -model pc105 -layout us -variant altgr-intl -option caps:escape
# Start daemon for touchpad control
exec --no-startup-id syndaemon -i 0.5 -d
# Network Manager
exec --no-startup-id nm-applet
# Owncloud Client
exec --no-startup-id owncloud
# Swich numlock on
exec --no-startup-id numlockx on
# Use Synapse to start programms way faster than dmenu
exec_always --no-startup-id synapse -s
# Start Dropbox
exec --no-startup-id dropbox start
# Run XAutoLock
exec --no-startup-id xautolock -locker '~/.i3/i3lock-fancy' -time 10
# Run parcellite
exec --no-startup-id parcellite
# Run gnome settings daemon
exec_always --no-startup-id pkill gnome-settings-daemon && gnome-settings-daemon
# Scratchpads
# Start a terminal in ~/templates and move it to the scratchpad
exec --no-startup-id terminator --title "Scratchpad" --working-dir=~/ --execute tmux -2 -u
for_window [class="^Terminator$" title="^Scratchpad"] move scratchpad

# Window settings
# --------------------------------------------------------------------------- #
